<%= form_for @edit, url: {action: 'update'} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, {:class => 'form-control'} %>
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.collect {|c| [c.name, c.id]}, {:include_blank => 'Pilih satuan'}, class: 'form-control'  %>
    <br>
    <%= f.submit "Create", {:class => 'btn btn-primary'} %>
<% end %>